<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/material_half"
                                    android:layout_marginLeft="@dimen/material_half"
                                    android:layout_marginRight="@dimen/material_half"
                                    android:layout_marginTop="@dimen/material_half"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardPreventCornerOverlap="false"
                                    android:foreground="?selectableItemBackground"
                                    app:elevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/material_half"
            android:paddingLeft="@dimen/material"
            android:paddingRight="@dimen/material"
            android:paddingTop="@dimen/material_primary_title_top_margin"
            android:textStyle="bold"
            tools:text="The article title goes here" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/material"
            android:paddingLeft="@dimen/material"
            android:paddingRight="@dimen/material"
            android:text="SubTitle"
            android:textColor="@color/primary_text" />
    </LinearLayout>

</android.support.v7.widget.CardView>
